<div class="container">
<div class="row">
<div class="col-sm-12">
<h1>Actores</h1>
<div class="text-right">
	<%= link_to "Crear Actor", new_actor_path, class: "btn btn-primary" %>
</div>
<table>
	<tr>
		<th>Foto</th>
		<th>Nombre</th>
		<th>Bio</th>
		<th>Fecha nacimiento</th>
		<th>Lugar nacimiento</th>
	</tr>
	<% @actors.each do |actor| %>
	<tr>
		<td><img src='<%= actor.image_url %>'></td>
		<td><%= actor.name %></td>
		<td><%= actor.bio %></td>
		<% if actor.alive %>
		<td><%= actor.birth_date %></td>
		<td><%= actor.birth_place %></td>
		<% else %>
		<td><font color="red"><p>Dead</p> <%= actor.death_date %></td>
		<td><font color="red"><%= actor.death_place %></td>
		<% end %>
	</tr>
	<% end %>
</table>
</div>
</div>
</div>